            <% if(emailArr.length==0){ %>
              <h1>You don't have any mail history.</h1>
            <% } %>
            <ul>
              <% emailArr.forEach((elements)=>{ %>
                <li>
                  <div class="mail-history">
                    <div class="dropdown">
                        <details>
                              
                          <summary><b>To:</b> <%= elements.to %>  &ensp; <b>Sub:</b> <%= elements.subject %>   &ensp; <b>Date:</b> <%= elements.createdAt%> </summary>  
                          <div class="mail">
                                              
                            <p><b>From:</b> &nbsp;<%= elements.from.name %></p>
                            <p><b>Sent:</b> &nbsp;<%= elements.createdAt %></p>
                            <p><b>To:</b> &nbsp;<%= elements.to %></p>
                            <p><b>Sub:</b> &nbsp;<%= elements.subject %></p>
                            <% if(elements.cc.length>0){ %>
                              <p><b>CC:</b>
                                <% elements.cc.forEach((ele)=>{ %>
                                  <%= ele.email %>,&nbsp;
                                <% }) %>
                              </p>
                            <% } %>
                            <div style="margin-left: 50px;">
                              <p><b>Body : </b>
                                <%- elements.content %>
                              </p>
                            </div>
                            <!-- <a href="attachment.com" id="attachement"> Attachment File </a> -->
                          </div>
                        </details>
  
                    </div>
                  </div>
                </li>    
              <% }) %>

            </ul>  
                
              
